{
  "name": "mt_gradius",
  "version": "1.0.0",
  "description": "Gradius. You have to need packages, uglifyjs, uglifyes, uglifycss, html-dist",
  "scripts": {
    "build": "npm run build:js && npm run build:css && npm run build:css && npm run build:html && cp ./src/audios/* ./dist/audios && cp ./src/images/* ./dist/images && cp ./src/*.json ./dist",
    "build:edit": "npm run build:js_edit && npm run build:css_edit && npm run build:html_edit",
    "build:all": "npm run build && npm run build:edit",

    "build:js": "uglifyjs ./src/gradius_canvasimgs.js ./src/gradius_common.js ./src/gradius_parts_enemies.js ./src/gradius_parts_enemy_bosses.js ./src/gradius_parts_enemy_shot.js ./src/gradius_parts_map.js ./src/gradius_parts_playermain.js ./src/gradius_enemies.js ./src/gradius_map.js ./src/gradius_controller_event.js ./src/gradius_main.js -c toplevel -m toplevel -o ./dist/gradius_main.min.js",
    "build:css": "uglifycss ./src/gradius_main.css > ./dist/gradius_main.min.css",
    "build:html": "html-dist --config html-dist.config.js --input ./src/gradius.html > ./dist/gradius.html --jsFile gradius_main.min.js --cssFile gradius_main.min.css",
    "build:images": "imagemin ./src/images/* -o ./dist/images",
    "build:js_edit": "uglifyjs ./src/gradius_canvasimgs.js ./src/gradius_common.js ./src/gradius_parts_enemies.js ./src/gradius_parts_map.js ./src/gradius_map.js ./src/gradius_editing_stage.js -o ./dist/gradius_editing_stage.min.js -c -m",
    "build:css_edit": "uglifycss ./src/gradius_editing_stage.css > ./dist/gradius_editing_stage.min.css",
    "build:html_edit": "html-dist --config html-dist.config.js --input ./src/gradius_editing_stage.html > ./dist/gradius_editing_stage.html --jsFile gradius_editing_stage.min.js --cssFile gradius_editing_stage.min.css",
    "clean": "rm -rf ./dist/*.js ./dist/*.css ./dist/images/* ./dist/audios/* ./dist/*.html"
  },
  "author": "Takahashi Masaya",
  "license": "ISC",
  "devDependencies": {
    "html-dist": "^0.3.2",
    "imagemin-cli": "^3.0.0"
  },
  "dependencies": {
    "uglify-es": "^3.3.10"
  }
}
