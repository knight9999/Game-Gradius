{
  "name": "mt_gradius",
  "version": "1.0.0",
  "description": "Gradius. You have to need packages, uglifyjs, uglifyes, uglifycss",
  "main": "index.js",
  "scripts": {
    "watch": "npm run build:js & npm run build:css & npm run build:css & npm run build:html & cp ./src/audios/* ./dist/audios & cp ./src/images/* ./dist/images & cp ./src/*.json ./dist",
    "watchfull": "npm run build:js & npm run build:css & npm run build:css & npm run build:html & npm run build:images",
    "watch:edit": "npm run build:js_edit & npm run build:css_edit & npm run build:html_edit",
    "build:js": "uglifyjs ./src/gradius_canvasimgs.js ./src/gradius_enemies.js ./src/gradius_map.js ./src/gradius_main.js -o ./dist/gradius_main.min.js -c",
    "build:css": "uglifycss ./src/gradius_main.css > ./dist/gradius_main.min.css",
    "build:html": "html-dist --config html-dist.config.js --input ./src/gradius.html > ./dist/gradius.html --jsFile gradius_main.min.js --cssFile gradius_main.min.css",
    "build:images": "imagemin ./src/images/* -o ./dist/images",
    "build:js_edit": "uglifyjs ./src/gradius_canvasimgs.js ./src/gradius_map.js ./src/gradius_editing_stage.js -o ./dist/gradius_editing_stage.min.js -c",
    "build:css_edit": "uglifycss ./src/gradius_editing_stage.css > ./dist/gradius_editing_stage.min.css",
    "build:html_edit": "html-dist --config html-dist.config.js --input ./src/gradius_editing_stage.html > ./dist/gradius_editing_stage.html --jsFile gradius_editing_stage.min.js --cssFile gradius_editing_stage.min.css",
    "clean": "rm -rf ./dist/*.js ./dist/*.css ./dist/images/* ./dist/*.html"
  },
  "author": "Takahashi Masaya",
  "license": "ISC",
  "devDependencies": {
    "html-dist": "^0.3.2",
    "imagemin-cli": "^3.0.0"
  },
  "dependencies": {
    "uglify-es": "^3.1.6",
    "uglifyjs": "^2.4.11",
    "webpack": "^3.8.1"
  }
}
